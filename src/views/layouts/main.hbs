<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <!-- Do not forget to change the path to the css file -->
    <title> {{#if pageTitle}} {{pageTitle}} {{else}} Home Page {{/if}} </title>
    <link href="./static/css/style.css" type="text/css" rel="stylesheet" />
  </head>

  <body>

    <div id="box">

      <!-- In case of error, you should display div with class "errorContainer" -->
      <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
      {{#if error}}
        <div>
          <div class="errorContainer">
            <p>{{error}}</p>
          </div>
        </div>
      {{/if}}

      <nav>
        <a href="/">Home</a>
        <ul>
          <!-- Guest users and Logged users -->
          <li><a href="#">Housing for rent</a></li>
          {{#if user.isAuthenticated}}
            <!-- Logged users -->
            <li><a href="#">Create offer</a></li>
            <li><a href="#">Search</a></li>
            <li><a href="/users/logout">Logout</a></li>
          {{else}}
            <!-- Guest users -->
            <li><a href="/users/login">Login</a></li>
            <li><a href="/users/register">Register</a></li>
          {{/if}}
        </ul>
      </nav>

      <main>
        {{{body}}}
      </main>

      <footer>
        Â© 2021
      </footer>
    </div>

  </body>

</html>